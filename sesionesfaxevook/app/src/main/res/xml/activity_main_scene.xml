<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start"
        app:duration="2000">

    <KeyFrameSet>
        <KeyAttribute
            app:motionTarget="@+id/imageView"
            android:rotation="720"
            app:framePosition="100"
             />
    </KeyFrameSet>

        <OnClick app:targetId="@+id/imageView"/>



    </Transition>

    <ConstraintSet android:id="@+id/start">

        <Constraint
            app:layout_editor_absoluteY="-2dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintHorizontal_bias="0.498"
            android:visibility="invisible"/>
        <Constraint
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            app:layout_editor_absoluteY="705dp"
            app:layout_editor_absoluteX="323dp"
            android:visibility="invisible"/>
        <Constraint
            app:layout_editor_absoluteY="368dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/name1"
            android:layout_marginEnd="400dp"
            android:visibility="invisible"/>
        <Constraint
            app:layout_editor_absoluteY="578dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/name2"
            android:layout_marginLeft="296dp"
            android:layout_marginStart="400dp"
            android:visibility="invisible"/>
        <Constraint
            android:layout_height="208dp"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="184dp"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintBottom_toBottomOf="parent"

            />
        <Constraint
            android:id="@+id/imageViewstatic"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="184dp"
            android:layout_height="208dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="76dp"
            android:visibility="invisible"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <Constraint
            android:id="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp" />
        <Constraint
            android:id="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="184dp"
            android:layout_height="208dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="76dp"
            android:visibility="invisible"/>
        <Constraint
            android:id="@+id/name1"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="65dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintHorizontal_bias="0.497" />
        <Constraint
            android:id="@+id/name2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/name1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="65dp" />
        <Constraint
            android:id="@+id/button2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/name2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp" />
        <Constraint
            android:id="@+id/idcapacolor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"/>
        <Constraint
            android:id="@+id/imageViewstatic"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="184dp"
            android:layout_height="208dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="76dp"
            android:visibility="visible"/>
        <Constraint
            android:layout_height="76dp"
            android:layout_width="70dp"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/imageView6"
            app:layout_constraintEnd_toStartOf="@+id/imageView7"
            app:layout_constraintTop_toBottomOf="@+id/button2" />
        <Constraint
            android:layout_height="76dp"
            app:layout_constraintStart_toEndOf="@+id/idcapacolor"
            app:layout_constraintEnd_toEndOf="@+id/imageView6"
            android:layout_width="70dp"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toBottomOf="@+id/button2"
            android:id="@+id/imageView7" />
    </ConstraintSet>


</MotionScene>
